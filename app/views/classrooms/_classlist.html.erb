<table class="table table-bordered table-condensed" id="index-classroom">
  <thead>
    <tr>
      <th>クラス名</th>
      <th>担任登録</th>
      <th>担任名</th>
      <th>職員コード</th>
      <th>担任編集</th>
      <th>担任削除</th>
    </tr>
  </thead>

  <tbody>
    <% classrooms.each do |classroom| %>
      <% teachers = Teacher.where(classroom_id: classroom.id) %>
      <% if teachers.blank? %>
      <tr>
        <td><%= classroom.class_name %></td>
        <td><%= link_to '担任登録', new_teachers_path(classroom_id: classroom.id), remote: true, class: "btn btn-primary" %></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
      <% else %>
        <% saved_class_name = nil %>
        <% teachers.each do |teacher| %>
        <tr>
          <% if classroom.class_name == saved_class_name %>
            <td></td>
          <% else %>
            <td><%= classroom.class_name %></td>
          <% end %>
          <% if classroom.class_name == saved_class_name %>
            <td></td>
            <td><%= teacher.teacher_name %></td>
            <td><%= teacher.tcode %></td>
            <td><%= link_to "編集", edit_info_teachers_path(school_url: params[:school_url], id: teacher.id), remote: true, class: "btn btn-primary" %></td>
          <% else %>
            <% saved_class_name = classroom.class_name %>
            <td><%= link_to '担任登録', new_teachers_path(classroom_id: classroom.id), remote: true, class: "btn btn-primary" %></td>
            <td><%= teacher.teacher_name %></td>
            <td><%= teacher.tcode %></td>
            <td><%= link_to "編集", edit_info_teachers_path(school_url: params[:school_url], id: teacher.id), remote: true, class: "btn btn-primary" %></td>
          <% end %>
          <td><%= link_to "削除", '#', method: :delete, class: "btn btn-danger", data: {confirm: "削除してよろしいですか？" } %></td>
        </tr>
        <% end %>
      <% end %>
    <% end %>
  </tbody>
</table>
