<h1>学校新規作成</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_with(model: @school, url: system_admins_schools_path, local: true) do |f| %>
      <%= render 'layouts/flash_messages' %>

      <div class="field">
        <%= f.label :school_name %>
        <%= f.text_field :school_name, class: "form-control" %>

        <%= f.label :school_url %>
        <%= f.text_field :school_url, class: "form-control" %>

        <%#= f.fields_for :classrooms, @school.classrooms.build do |c| %>
          <%#= c.hidden_field :school_id, value: @school.id  %>
          <%#= c.hidden_field :class_name, value: "3-1"  %>
        <%# end %>
      </div>

      <div class="actions">
        <%= f.submit "作成する", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>
    <%= link_to '戻る', system_admins_path %>
  </div>
</div>

