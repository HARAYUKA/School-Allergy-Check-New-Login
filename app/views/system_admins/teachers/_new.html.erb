<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1>学校管理者作成</h1>
    </div>
    <div class="modal-body">
      <div id="adminteacher-error"></div>
      <%= form_with(model: @admin_teacher, url: system_admins_school_teachers_path(@school), remote: true) do |f| %>
        <div class="field">
          <%= f.label :teacher_name %>
          <%= f.text_field :teacher_name, placeholder: "名前を入力してください（必須）", class: "form-control", required: true %>

          <%= f.label :tcode %>
          <%= f.text_field :tcode, placeholder: "4〜8文字以内の半角英数で入力してください（必須）", autofocus: true, class: 'form-control', required: true %>

          <%= f.label :email %>
          <%= f.email_field :email, placeholder: "メールアドレスを入力してください（必須）", autofocus: true, autocomplete: 'email', class: 'form-control', required: true %>

          <%= f.label :password %>
          <%= f.password_field :password, placeholder: "パスワードを入力してください（必須）", autocomplete: 'current-password', class: 'form-control', required: true %>

          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, placeholder: "パスワード（確認）を入力してください（必須）", autocomplete: 'current-password', class: 'form-control', required: true %><br>
        </div>
        <div class="actions">
          <%= f.submit "作成する", class: "btn btn-primary btn-block" %>
        </div>
      <% end %>
      <button type="button" class="btn btn-block btn-default %>" data-dismiss="modal">
        キャンセル
      </button>
    </div>
  </div>
</div>

