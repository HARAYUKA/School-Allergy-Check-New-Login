<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
    </div>

    <div class="modal-body">
      <h1>対応法登録</h1>
      <div>
        <%= form_with(model: @alergy_check, url: teachers_students_alergy_checks_creator_path) do |f| %>
          <!--<div class="links">
            <%# link_do_add_association 'フォームを追加', f, :alergy_checks %>
          </div>-->
          <table class="table table-bordered table-condensed table-hover table__alergy-contents--center">
            <thead>
              <tr>
                <td colspan=8><%= l(@day, format: :long) %></td>
              </tr>
              <tr>
                <th>日付</th>
                <th>クラス名</th>
                <th>児童名</th>
                <th>メニュー名</th>
                <th>対応法</th>
                <th>備考</th>
              </tr>
            </thead>
            <tbody>
              <div id="alergy_checks">
                <%= render "alergy_check_fields", f: f %>
              </div>
            </tbody>
          </table>
          <div>
            <%= f.submit "登録", class: "btn btn-primary btn-block" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>